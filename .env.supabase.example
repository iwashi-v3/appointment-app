SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_SENDER_NAME=Supabase

# Email templates
MAILER_URLPATHS_INVITE=/auth/v1/verify
